<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_items_layout_tower"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewTower"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/def_text"/>


    <TextView
        android:id="@+id/text_view_name_tower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/imageViewTower"
        android:layout_toRightOf="@+id/imageViewTower"
        android:text="@string/def_text"
        android:textColor="#C8E5E9"
        android:textSize="21sp"
        app:fontFamily="cursive" />

</RelativeLayout>